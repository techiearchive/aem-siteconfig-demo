<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Site Basic Config Properties"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <general
                jcr:primaryType="nt:unstructured"
                jcr:title="General"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                	<logoIcon
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldDescription="Please provide the Site Specific Logo Icon"
                                        fieldLabel="Logo Icon"
                                        name="./logoIcon"
                                        rootPath="/content/dam"/>
                                    <logoIconAltText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please provide Alt Text for the Logo Icon"
                                        fieldLabel="Logo Icon Alt Text"
                                        name="./logoIconAltText"
                                        required="true"/>
                                    <logoLinkURL
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldDescription="Please provide the Site Specific Logo Icon Link URL"
                                        fieldLabel="Logo Link URL"
                                        name="./logoLinkURL"
                                        rootPath="/content/techiearchive-aem"/>
                                    <region
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                        allowBulkEdit="{Boolean}true"
                                        autocreateTag="{Boolean}true"
                                        fieldDescription="Select Region."
                                        fieldLabel="Region"
                                        multiple="{Boolean}false"
                                        name="./region"
                                        rootPath="/content/cq:tags/techiearchive/region">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-msm-lockable="cq:tags"/>
                                    </region>
                                </items>
                            </column>
                        </items>
                    </columns>
                </items>
            </general>
        </items>
    </content>
</jcr:root>
